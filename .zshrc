# --- [ David's Customizations ]---

# For PyEnv
export PYENV_ROOT="$HOME/.pyenv"

# Set the PATH
export PATH=./node_modules/.bin:$PYENV_ROOT/bin:$HOME/.cargo/bin:$HOME/.rvm/bin:$PATH

# Init Homebrew location
eval "$(/opt/homebrew/bin/brew shellenv)"

# Alias to edit files in MacVim
alias edit="open -a MacVim $@"

# These aliases are to set the system architecture each time
# You can review what the current state is by using: `arch`
alias arm="print -P 'System Arch set to: %B%F{yellow}arm64%f%b' && arch -arm64 zsh"
alias intel="print -P 'System Arch set to: %B%F{yellow}intel%f%b' && arch -x86_64 zsh"

# Ensure spectral uses the global ruleset
alias spectral="spectral --ruleset $HOME/.spectral.yaml $@"

# For Apple M1 act needs to have the container specified
alias act="act --container-architecture linux/amd64 $@"

# Initialize Starship
eval "$(starship init zsh)"

# Setup NVM for Node.js
export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

# Ensure `nvm use` occurs when entering a directory
# Define a zsh hook
autoload -U add-zsh-hook

# Define a function to load nvmrc
load-nvmrc() {
  local nvmrc_path
  nvmrc_path="$(nvm_find_nvmrc)"

  if [ -n "$nvmrc_path" ]; then
    local nvmrc_node_version
    nvmrc_node_version=$(nvm version "$(cat "${nvmrc_path}")")

    if [ "$nvmrc_node_version" = "N/A" ]; then
      nvm install
    elif [ "$nvmrc_node_version" != "$(nvm version)" ]; then
      nvm use
    fi
  elif [ -n "$(PWD=$OLDPWD nvm_find_nvmrc)" ] && [ "$(nvm version)" != "$(nvm version default)" ]; then
    echo "Reverting to nvm default version"
    nvm use default
  fi
}

# Add the load nvmrc function to the zsh hook
add-zsh-hook chpwd load-nvmrc
# Run manually once
load-nvmrc

# Setup GOPATH
export GOPATH=$HOME/go

# Setup Android SDK Development
export ANDROID_HOME=`brew --prefix`/share/android-commandlinetools
export SDK_MANAGER=`brew --prefix`/bin/sdkmanager
export AVD=`brew --prefix`/bin/avdmanager
export ADB=`brew --prefix`/bin/adb
export PATH=$ADB:$AVD:$SDK_MANAGER:$PATH

# Set toilet to use figlet fonts
alias toilet="toilet -d /opt/homebrew/Cellar/figlet/2.2.5/share/figlet/fonts $@"

# Init Pyenv
eval "$(pyenv init -)"

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

